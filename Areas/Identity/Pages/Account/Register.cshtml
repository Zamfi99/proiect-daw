@page
@model RegisterModel
@{
    ViewData["Title"] = "Inregistrare";
}
<section>
    <div class="row d-flex justify-content-center col-12">
        <div class="col-4 border border-primary rounded m-20">
            <form asp-route-returnUrl="@Model.ReturnUrl" method="post" class="py-5">
                <div class="d-flex justify-content-center">
                    <figure style="padding-top: 56.25%; width: 100%; position: relative">
                        <img style="position: absolute; width: 100%; top: 0; max-height: 100%" src="https://z-ingenious.ro/z-ingenious-logo.png"/>
                    </figure>
                </div>
                <div class="d-flex justify-content-center">
                    <h1 class="h3 mb-3 font-weight-normal">Inregistrare</h1>
                    <div asp-validation-summary="All" class="text-danger"></div>
                </div>

                <div class="form-group">
                    <input asp-for="Input.Email" class="form-control" placeholder="Adresa de email" required autofocus/>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="Input.Password" class="form-control" placeholder="Parola" required/>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="Input.ConfirmPassword" class="form-control" placeholder="Confirma parola" required/>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>


                <div class="form-group">
                    <button type="submit" class="btn btn-lg btn-success btn-block">Inregistrare</button>
                </div>
            </form>
            <div class="row col-12">
                <p class="col-12">
                    <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">Ai deja un cont? Autentifica-te!</a>
                </p>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}