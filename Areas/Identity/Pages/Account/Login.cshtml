@page
@model LoginModel

@{
    ViewData["Title"] = "Autentificare";
}

<section>
    <div class="row d-flex justify-content-center col-12">
        <div class="col-4 border border-primary rounded m-20">
            <form id="account" method="post" class="py-5">
                <div class="d-flex justify-content-center">
                    <figure style="padding-top: 56.25%; width: 100%; position: relative">
                        <img style="position: absolute; width: 100%; top: 0; max-height: 100%" src="https://z-ingenious.ro/z-ingenious-logo.png"/>
                    </figure>
                </div>
                <div class="d-flex justify-content-center">
                    <h1 class="h3 mb-3 font-weight-normal">Autentificare</h1>
                    <div asp-validation-summary="All" class="text-danger"></div>
                </div>
                <div class="form-group ">
                    <input asp-for="Input.Email" class="form-control" placeholder="Adresa de email" required autofocus/>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group ">
                    <input asp-for="Input.Password" class="form-control" placeholder="Parola" required/>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe"/>
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-lg btn-success btn-block">Autentificare</button>
                </div>
            </form>
            <div class="row col-12">
                <p class="col-12">
                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Nu ai un cont? Inregistreaza-te!</a>
                </p>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}